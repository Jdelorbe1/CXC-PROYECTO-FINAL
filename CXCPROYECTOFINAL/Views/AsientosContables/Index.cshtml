@model IEnumerable<CXCPROYECTOFINAL.Models.AsientosContable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentificadorCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMovimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentificadorTipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAsiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoAsiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificadorCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMovimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificadorTipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoAsiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdentificadorAsiento">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdentificadorAsiento">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdentificadorAsiento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
